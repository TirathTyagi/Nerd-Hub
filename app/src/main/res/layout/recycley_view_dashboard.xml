<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboardViewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgBook"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:src="@drawable/book_icon"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/txtRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgBook"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:maxLength="20"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Book Name "/>
    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtRecyclerView"
        android:layout_toRightOf="@id/imgBook"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="Author Name"
        android:textSize="10sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAuthor"
        android:layout_toRightOf="@id/imgBook"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:text="Rs 499"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:textColor="@color/Price_Green"/>
    <ImageView
        android:id="@+id/imgFavStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/txtRating"
        android:layout_marginTop="13dp"
        android:src="@drawable/fav_icon"/>
    <TextView
        android:id="@+id/txtRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:text="4.5"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:textColor="@color/Fav_Yellow"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>